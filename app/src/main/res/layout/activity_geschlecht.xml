<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".geschlecht"
    android:background="#1E90FF">


    <TextView
        android:id="@+id/wählen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Wählen sie Ihr Geschlecht"
        android:textSize="30dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="80dp"
        app:layout_goneMarginRight="80dp"/>

    <TextView
        android:id="@+id/geburtsdatum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="und Geburtsdatum"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wählen" />

    <androidx.cardview.widget.CardView
        android:id="@+id/eGeschlecht"
        android:layout_width="198dp"
        android:layout_height="125dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/geburtsdatum">

        <TextView
            android:id="@+id/edgeschlecht"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="47dp"
            android:textAlignment="center"
            android:text="Geschlecht"
            android:textColor="@color/black"
            android:textSize="25dp" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/btnDatePicker"
        android:layout_width="198dp"
        android:layout_height="125dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/eGeschlecht">

        <TextView
            android:id="@+id/eddate"
            android:layout_width="198dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="47dp"
            android:text="Geburtsdatum"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/weiter"
        android:layout_width="140dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/btnDatePicker"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardBackgroundColor="@color/black"
        android:layout_marginBottom="25dp">

        <TextView
            android:id="@+id/txweiter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="6dp"
            android:text="Weiter"
            android:textColor="@color/white"
            android:textSize="27dp" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>